{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 500,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/co2-concentration.csv",
      "format": {"type": "csv", "parse": {"Date": "utc:'%Y-%m-%d'"}},
      "transform": [
        {"type": "formula", "expr": "year(datum.Date)", "as": "year"},
        {"type": "formula", "expr": "floor(datum.year / 10)", "as": "decade"},
        {
          "type": "formula",
          "expr": "(datum.year % 10) + (month(datum.Date)/12)",
          "as": "scaled_date"
        },
        {
          "type": "window",
          "params": [null, null],
          "as": ["first_date", "last_date"],
          "ops": ["first_value", "last_value"],
          "fields": ["scaled_date", "scaled_date"],
          "sort": {"field": ["scaled_date"], "order": ["ascending"]},
          "groupby": ["decade"],
          "frame": [null, null]
        },
        {
          "type": "formula",
          "expr": "datum.first_date === datum.scaled_date ? 'first' : datum.last_date === datum.scaled_date ? 'last' : null",
          "as": "end"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {"type": "filter", "expr": "datum[\"end\"]===\"first\""},
        {
          "type": "filter",
          "expr": "isValid(datum[\"scaled_date\"]) && isFinite(+datum[\"scaled_date\"]) && isValid(datum[\"CO2\"]) && isFinite(+datum[\"CO2\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {"type": "filter", "expr": "datum[\"end\"]===\"last\""},
        {
          "type": "filter",
          "expr": "isValid(datum[\"scaled_date\"]) && isFinite(+datum[\"scaled_date\"]) && isValid(datum[\"CO2\"]) && isFinite(+datum[\"CO2\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["decade"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"scaled_date\"]"},
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "stroke": {"scale": "color", "field": "decade"},
              "x": {"scale": "x", "field": "scaled_date"},
              "y": {"scale": "y", "field": "CO2"},
              "defined": {
                "signal": "isValid(datum[\"scaled_date\"]) && isFinite(+datum[\"scaled_date\"]) && isValid(datum[\"CO2\"]) && isFinite(+datum[\"CO2\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "baseline": {"value": "top"},
          "fill": {"value": "black"},
          "x": [
            {
              "test": "!isValid(datum[\"scaled_date\"]) || !isFinite(+datum[\"scaled_date\"])",
              "value": 0
            },
            {"scale": "x", "field": "scaled_date"}
          ],
          "y": [
            {
              "test": "!isValid(datum[\"CO2\"]) || !isFinite(+datum[\"CO2\"])",
              "field": {"group": "height"}
            },
            {"scale": "y", "field": "CO2"}
          ],
          "text": {
            "signal": "isValid(datum[\"year\"]) ? datum[\"year\"] : \"\"+datum[\"year\"]"
          }
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "baseline": {"value": "bottom"},
          "fill": {"value": "black"},
          "x": [
            {
              "test": "!isValid(datum[\"scaled_date\"]) || !isFinite(+datum[\"scaled_date\"])",
              "value": 0
            },
            {"scale": "x", "field": "scaled_date"}
          ],
          "y": [
            {
              "test": "!isValid(datum[\"CO2\"]) || !isFinite(+datum[\"CO2\"])",
              "field": {"group": "height"}
            },
            {"scale": "y", "field": "CO2"}
          ],
          "text": {
            "signal": "isValid(datum[\"year\"]) ? datum[\"year\"] : \"\"+datum[\"year\"]"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "scaled_date"},
          {"data": "data_0", "field": "scaled_date"},
          {"data": "data_1", "field": "scaled_date"}
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "CO2"},
          {"data": "data_0", "field": "CO2"},
          {"data": "data_1", "field": "CO2"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "zero": false,
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "decade", "sort": true},
      "range": {"scheme": "magma"},
      "interpolate": "hcl"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 11,
      "grid": true,
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year into Decade",
      "tickCount": 11,
      "labelFlush": true,
      "labelOverlap": true,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "CO2 concentration in ppm",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {"style": {"text": {"align": "left", "dx": 3, "dy": 1}}}
}
