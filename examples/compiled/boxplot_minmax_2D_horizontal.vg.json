{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A horizontal box plot showing median, min, and max in the US population distribution of age groups in 2000.",
  "background": "white",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/population.json",
      "format": {"type": "json"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["q1", "q3", "median", "min", "max"],
          "fields": ["people", "people", "people", "people", "people"],
          "as": [
            "lower_box_people",
            "upper_box_people",
            "mid_box_people",
            "lower_whisker_people",
            "upper_whisker_people"
          ]
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 20},
    {"name": "height", "update": "bandspace(domain('y').length, 0, 0) * y_step"}
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "black"},
          "tooltip": {
            "signal": "{\"Max of people\": format(datum[\"upper_whisker_people\"], \"\"), \"Q3 of people\": format(datum[\"upper_box_people\"], \"\"), \"Median of people\": format(datum[\"mid_box_people\"], \"\"), \"Q1 of people\": format(datum[\"lower_box_people\"], \"\"), \"Min of people\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": isValid(datum[\"age\"]) ? datum[\"age\"] : \"\"+datum[\"age\"]}"
          },
          "x": {"scale": "x", "field": "lower_whisker_people"},
          "x2": {"scale": "x", "field": "lower_box_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rule",
      "style": ["rule", "boxplot-rule"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "black"},
          "tooltip": {
            "signal": "{\"Max of people\": format(datum[\"upper_whisker_people\"], \"\"), \"Q3 of people\": format(datum[\"upper_box_people\"], \"\"), \"Median of people\": format(datum[\"mid_box_people\"], \"\"), \"Q1 of people\": format(datum[\"lower_box_people\"], \"\"), \"Min of people\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": isValid(datum[\"age\"]) ? datum[\"age\"] : \"\"+datum[\"age\"]}"
          },
          "x": {"scale": "x", "field": "upper_box_people"},
          "x2": {"scale": "x", "field": "upper_whisker_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "rect",
      "style": ["bar", "boxplot-box"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"Max of people\": format(datum[\"upper_whisker_people\"], \"\"), \"Q3 of people\": format(datum[\"upper_box_people\"], \"\"), \"Median of people\": format(datum[\"mid_box_people\"], \"\"), \"Q1 of people\": format(datum[\"lower_box_people\"], \"\"), \"Min of people\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": isValid(datum[\"age\"]) ? datum[\"age\"] : \"\"+datum[\"age\"]}"
          },
          "x": {"scale": "x", "field": "lower_box_people"},
          "x2": {"scale": "x", "field": "upper_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "rect",
      "style": ["tick", "boxplot-median"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": {"value": "white"},
          "tooltip": {
            "signal": "{\"Max of people\": format(datum[\"upper_whisker_people\"], \"\"), \"Q3 of people\": format(datum[\"upper_box_people\"], \"\"), \"Median of people\": format(datum[\"mid_box_people\"], \"\"), \"Q1 of people\": format(datum[\"lower_box_people\"], \"\"), \"Min of people\": format(datum[\"lower_whisker_people\"], \"\"), \"age\": isValid(datum[\"age\"]) ? datum[\"age\"] : \"\"+datum[\"age\"]}"
          },
          "xc": {"scale": "x", "field": "mid_box_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 14},
          "width": {"value": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": [
          "lower_whisker_people",
          "lower_box_people",
          "upper_box_people",
          "upper_whisker_people",
          "mid_box_people"
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "age", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0,
      "paddingOuter": 0
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "population",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "age",
      "labelOverlap": true,
      "zindex": 0
    }
  ]
}
